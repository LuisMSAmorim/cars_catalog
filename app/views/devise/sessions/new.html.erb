<h2>Área restrita</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-grup">
    <%= f.label :email, class: 'form-control' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "example@email.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'form-control', style: 'margin-top: 25px' %><br />
    <%= f.password_field :password, autocomplete: false, class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label :remember_me, class: 'form-check-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
