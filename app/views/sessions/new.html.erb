<%= form_for :session, url: sign_in_path do |form| %>
  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password, 'Senha' %><br />
    <%= form.password_field :password, autocomplete: "off" %>
  </div>
  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
